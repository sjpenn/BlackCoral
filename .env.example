# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/blackcoral
DB_NAME=blackcoral
DB_USER=blackcoral_user
DB_PASSWORD=your-password-here
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration (for Celery and Caching)
REDIS_URL=redis://localhost:6379/0

# External API Keys
SAM_GOV_API_KEY=your-sam-gov-api-key
SAM_GOV_ACCOUNT_TYPE=non_federal
SAM_GOV_BASE_URL=https://api.sam.gov/opportunities/v2/

# SAM.gov Description Enhancement Settings
SAM_GOV_ENABLE_DESCRIPTION_ENHANCEMENT=True
SAM_GOV_USE_V3_API=True
SAM_GOV_DESCRIPTION_FETCH_TIMEOUT=10
SAM_GOV_DESCRIPTION_CACHE_TTL=3600
SAM_GOV_MAX_DESCRIPTION_LENGTH=10000
SAM_GOV_DESCRIPTION_MIN_ENHANCEMENT_LENGTH=50
USASPENDING_API_KEY=your-usaspending-api-key
GAO_API_KEY=your-gao-api-key
GSA_API_KEY=your-gsa-api-key-here
FPDS_API_KEY=your-fpds-api-key-here

# AI API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=sonnet
ANTHROPIC_MAX_TOKENS=4000
GOOGLE_AI_API_KEY=your-google-ai-api-key
OPENROUTER_API_KEY=your-openrouter-api-key
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Azure OpenAI Configuration (alternative to OpenAI)
AZURE_OPENAI_ENDPOINT=your-azure-endpoint
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# AI Configuration
AI_DEFAULT_PROVIDER=claude
AI_FALLBACK_ENABLED=True
SITE_URL=https://blackcoral.ai
SITE_NAME=BLACK CORAL

# Security Settings
CSRF_TRUSTED_ORIGINS=https://localhost:8000
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# File Storage
MEDIA_ROOT=/var/uploads/blackcoral
STATIC_ROOT=/var/static/blackcoral

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Phase 2 Settings
# Set to True to use SAM.gov alpha endpoint for testing
SAM_GOV_USE_ALPHA=False

# Cache settings
CACHE_TIMEOUT=3600

# Document processing
MAX_DOCUMENT_SIZE=100000000  # 100MB
DOCUMENT_PROCESSING_BACKEND=local
# Options: local, aws_textract, azure_form_recognizer

# AWS Textract (for document processing)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_TEXTRACT_REGION=us-east-1

# Azure Form Recognizer (for document processing)
AZURE_FORM_RECOGNIZER_ENDPOINT=your-azure-form-recognizer-endpoint
AZURE_FORM_RECOGNIZER_KEY=your-azure-form-recognizer-key

# Agent Configuration
AGENT_TIMEOUT_SECONDS=300
AGENT_MAX_RETRIES=3
AGENT_HEALTH_CHECK_INTERVAL=60
AGENT_CONCURRENT_TASKS=5

# Email Configuration (for notifications and sharing)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=BLACK CORAL <noreply@blackcoral.ai>
EMAIL_SUBJECT_PREFIX=[BLACK CORAL]
EMAIL_SHARING_RATE_LIMIT=10  # Max 10 shared opportunities per hour per user

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO
ENABLE_PERFORMANCE_MONITORING=True
PERFORMANCE_SAMPLE_RATE=0.1

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_USE_CACHE=redis

# Webhook Configuration
WEBHOOK_SECRET_KEY=your-webhook-secret-key
WEBHOOK_TIMEOUT=30